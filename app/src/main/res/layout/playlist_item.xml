<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="328dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/txtPlaylist"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="58dp"
            android:layout_marginStart="54dp"
            android:text="@string/playlist"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:textAppearance="@style/playlist"
            android:gravity="top" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56dp"
            android:elevation="4dp"
            android:background="@drawable/rectangle_2" />


        <ImageView
            android:id="@+id/imagePlaylist"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="@string/emotional_w"
            android:fontFamily="@font/fjalla_one"
            android:textAppearance="@style/emotional_w" />


        <TextView
            android:id="@+id/subtitle"
            android:layout_width="84dp"
            android:layout_height="16dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="top"
            android:text="@string/video_serie"
            android:textAppearance="@style/video_serie" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

